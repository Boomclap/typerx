{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"newLine": "LF",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"target": "es2016"
	},
	"include": [
		"./../shared/**/*.ts",
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}